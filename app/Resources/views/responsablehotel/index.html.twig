{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
        <br>
    <h1>Responsablehotels list</h1>
    <br>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Last Login</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsableHotel in responsableHotels %}
            <tr class="w3-hover-light-green">
                <td><a href="{{ path('responsablehotel_show', { 'id': responsableHotel.id }) }}">{{ responsableHotel.id }}</a></td>
                <td>{{ responsableHotel.username }}</td>
                <td>{{ responsableHotel.email }}</td>
                <td>{{ responsableHotel.last_login|date("m/d/Y") }}</td>
                <td>

                            <a href="{{ path('responsablehotel_show', { 'id': responsableHotel.id }) }}"><button class="w3-button w3-green w3-round-large"><i class="fa fa-eye"> show</i></button></a>

                            <a href="{{ path('responsablehotel_edit', { 'id': responsableHotel.id }) }}"><button class="w3-button w3-orange w3-round-large"><i class="fa fa-pencil"> edit</i></button></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <br><br>

            <a href="{{ path('responsablehotel_new') }}" class="btn btn-info">Create a new responsableHotel</a>
    </div>
    {% block style %}
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <style>
            table {
                border-collapse: collapse;
                width: 50%;
            }

            th, td {
                padding: 10px;
                text-align: left;
                border-bottom: 3px solid #ddd;
            }

            tr:nth-child(even) {background-color: #f2f2f2;}
            .btn-success{
                width: 200px;
                height: 40px;
            }
            .btn-info{
                width: 200px;
                height: 40px;
            }
        </style>
    {% endblock %}
{% endblock %}
