{% extends 'base.html.twig' %}

{% block body %}
    <h1>Suite</h1>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suite.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ suite.prix }}</td>
            </tr>
            <tr>
                <th>Numero_suite</th>
                <td>{{ suite.numeroSuite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('suite_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('suite_edit', { 'id': suite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
