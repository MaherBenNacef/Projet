{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
    <h1>Suites list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Numero_suite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for suite in suites %}
            <tr>
                <td><a href="{{ path('suite_show', { 'id': suite.id }) }}">{{ suite.id }}</a></td>
                <td>{{ suite.prix }}</td>
                <td>{{ suite.numeroSuite }}</td>
                <td>

                            <i class="fa fa-eye"><a href="{{ path('suite_show', { 'id': suite.id }) }}">show</a></i><br>

                           <i class="fa fa-pencil"> <a href="{{ path('suite_edit', { 'id': suite.id }) }}">edit</a></i>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<br><br>

            <a href="{{ path('suite_new') }}" class="btn btn-info">Create a new suite</a>
    </div>
    {% block style %}
        <style>
            table {
                border-collapse: collapse;
                width: 50%;
            }

            th, td {
                padding: 10px;
                text-align: left;
                border-bottom: 3px solid #ddd;
            }

            tr:nth-child(even) {background-color: #f2f2f2;}
            .btn-success{
                width: 200px;
                height: 40px;
            }
            .btn-info{
                width: 200px;
                height: 40px;
            }
        </style>
    {% endblock %}
{% endblock %}
