{% extends 'base.html.twig' %}

{% block body %}
    <h1>Suites list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Numero_suite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for suite in suites %}
            <tr>
                <td><a href="{{ path('suite_show', { 'id': suite.id }) }}">{{ suite.id }}</a></td>
                <td>{{ suite.prix }}</td>
                <td>{{ suite.numeroSuite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('suite_show', { 'id': suite.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('suite_edit', { 'id': suite.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('suite_new') }}">Create a new suite</a>
        </li>
    </ul>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
{% endblock %}
