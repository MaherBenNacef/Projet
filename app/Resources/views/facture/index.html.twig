{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
    <h1>Factures list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_check_in</th>
                <th>Date_check_out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td><a href="{{ path('facture_show', { 'id': facture.id }) }}">{{ facture.id }}</a></td>
                <td>{% if facture.datecheckin %}{{ facture.datecheckin|date('Y-m-d') }}{% endif %}</td>
                <td>{% if facture.datecheckout %}{{ facture.datecheckout|date('Y-m-d') }}{% endif %}</td>
                <td>

                            <i class="fa fa-eye"><a href="{{ path('facture_show', { 'id': facture.id }) }}">show</a></i><br>

                           <i class="fa fa-pencil"> <a href="{{ path('facture_edit', { 'id': facture.id }) }}">edit</a></i>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <br>

            <a href="{{ path('facture_new') }}" class="btn btn-success" >Create a new facture</a>
</div>
    {% block style %}
        <style>
            table {
                border-collapse: collapse;
                width: 50%;
            }

            th, td {
                padding: 10px;
                text-align: left;
                border-bottom: 3px solid #ddd;
            }

            tr:nth-child(even) {background-color: #f2f2f2;}
            .btn-success{
                width: 200px;
                height: 40px;
            }
            .btn-info{
                width: 200px;
                height: 40px;
            }
        </style>
    {% endblock %}
{% endblock %}
