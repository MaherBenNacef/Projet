{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
    <h1>Clients list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Date_naissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td><a href="{{ path('client_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                <td>{{ client.username }}</td>
                <td>{{ client.password }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.datenaissance|date("m/d/Y") }}</td>
                <td>

                           <i class="fa fa-eye"> <a href="{{ path('client_show', { 'id': client.id }) }}">show</a></i><br>

                           <i class="fa fa-pencil"> <a href="{{ path('client_edit', { 'id': client.id }) }}">edit</a></i>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('client_new') }}" class="btn btn-info">Create a new client</a><br>
        <a href="{{ path('client_recherche') }}" class="btn btn-success"><i class="fa fa-search">recherche</i></a>
    </div>
    {% block style %}
        <style>
            table {
                border-collapse: collapse;
                width: 50%;
            }

            th, td {
                padding: 10px;
                text-align: left;
                border-bottom: 3px solid #ddd;
            }

            tr:nth-child(even) {background-color: #f2f2f2;}
            .btn-success{
                width: 200px;
                height: 40px;
            }
            .btn-info{
                width: 200px;
                height: 40px;
            }
        </style>
    {% endblock %}
{% endblock %}
