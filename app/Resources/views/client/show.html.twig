{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
    <h1>Client</h1>
    <table>
        <tbody>
            <tr>
                <th >Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ client.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ client.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ client.tel }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ client.datenaissance|date("m/d/Y") }}</td>
            </tr>
        </tbody>
    </table>


            <a href="{{ path('client_index') }}" class="btn btn-info">Back to the list</a><br>

            <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-warning">Edit</a>

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}

    </div>
    {% block style %}
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 30%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
            .btn-danger{
                width: 135px;
                height: 40px;
            }
            .btn-warning{
                width: 135px;
                height: 40px;
            }
        </style>
    {% endblock %}
{% endblock %}
