{% extends 'base.html.twig' %}

{% block body %}
    <h1>Admins list</h1>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <table>
        <thead>
            <tr>
                <th>Id_admin</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td><a href="{{ path('admin_show', { 'Id_Admin': admin.Id_Admin }) }}">{{ admin.IdAdmin }}</a></td>
                <td>{{ admin.username }}</td>
                <td>{{ admin.password }}</td>
                <td>{{ admin.email }}</td>
                <td>{{ admin.tel }}</td>
                <td>
                    <ul>
                        <li >
                            <a  href="{{ path('admin_show', { 'Id_Admin': admin.Id_Admin }) }}"><i class="fa fa-eye"></i>show</a>
                        </li>
                        <li>
                            <a  href="{{ path('admin_edit', { 'Id_Admin': admin.Id_Admin }) }}"><i class="fa fa-pencil"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul >

            <button type="button" class="btn btn-outline-primary" ><a href="{{ path('admin_new') }}">Create a new admin</a></button>


    </ul>
{% endblock %}
