{% extends 'base.html.twig' %}

{% block body %}
    <div align="center">
    <h1>Reservations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Id Client</th>
                <th>Date_check_in</th>
                <th>Date_check_out</th>
                <th>Type_reservation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td><a href="{{ path('reservation_show', { 'id': reservation.id }) }}">{{ reservation.id }}</a></td>
                <td><a href="{{ path('client_show', { 'id': reservation.client.id }) }}">{{ reservation.client.id }}</a></td>
                <td>{% if reservation.datecheckin %}{{ reservation.datecheckin|date('Y-m-d') }}{% endif %}</td>
                <td>{% if reservation.datecheckout %}{{ reservation.datecheckout|date('Y-m-d') }}{% endif %}</td>
                <td>{{ reservation.typeReservation }}</td>
                <td>

                           <i class="fa fa-eye"> <a href="{{ path('reservation_show', { 'id': reservation.id }) }}">show</a></i><br>

                           <i class="fa fa-pencil"> <a href="{{ path('reservation_edit', { 'id': reservation.id }) }}">edit</a></i><br>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<br><br>
            <a href="{{ path('reservation_new') }}" class="btn btn-info">Create a new reservation</a><br><br>

        <a href="{{ path('reservation_facture') }}" class="btn btn-success"><i class="fa fa-file"> Facture</i></a><br><br>
    </div>
    {% block style %}
        <style>
            table {
                border-collapse: collapse;
                width: 50%;
            }

            th, td {
                padding: 10px;
                text-align: left;
                border-bottom: 3px solid #ddd;
            }

            tr:nth-child(even) {background-color: #f2f2f2;}
            .btn-success{
                width: 200px;
                height: 40px;
            }
            .btn-info{
                width: 200px;
                height: 40px;
            }
        </style>
    {% endblock %}
{% endblock %}
